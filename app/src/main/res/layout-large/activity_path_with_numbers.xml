            android:gravity="center"
            android:text="16"
            android:layout_below="@+id/tile11"
            android:layout_toEndOf="@id/image_start"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile17"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="17"
            android:layout_toEndOf="@id/tile16"
            android:layout_below="@+id/tile12"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile18"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="18"
            android:layout_toEndOf="@id/tile17"
            android:layout_below="@id/tile13"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile19"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="19"
            android:layout_toEndOf="@id/tile18"
            android:layout_below="@id/tile14"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="20"
            android:layout_toEndOf="@id/tile19"
