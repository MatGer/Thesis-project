            android:layout_below="@+id/tile6"
            android:layout_toEndOf="@id/image_start"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="12"
            android:layout_toEndOf="@id/tile11"
            android:layout_below="@+id/tile7"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile13"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="13"
            android:layout_toEndOf="@id/tile12"
            android:layout_below="@id/tile8"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile14"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="14"
            android:layout_toEndOf="@id/tile13"
            android:layout_below="@id/tile9"
            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile15"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="15"
            android:layout_toEndOf="@id/tile14"
            android:layout_below="@+id/tile10"
            android:background="@drawable/unselected_tile_with_borders"/>
