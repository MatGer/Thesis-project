            android:background="@drawable/unselected_tile_with_borders"/>
        <TextView
            android:id="@+id/tile25"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="25"
            android:layout_toEndOf="@id/tile24"
            android:layout_below="@+id/tile20"
            android:background="@drawable/unselected_tile_with_borders"/>
        <ImageView
            android:id="@+id/image_start"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/teddy"
            android:layout_below="@id/tile1"/>
        <ImageView
            android:id="@+id/image_end"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/candy"
            android:layout_toEndOf="@id/tile25"
            android:layout_below="@id/tile15"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
