<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/drag1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dragdog"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"/>
        <TextView
            android:id="@+id/no11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/drag1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/no12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/no11"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/no13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/no12"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/drag2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dragowl"
            android:layout_centerVertical="true"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"/>
        <TextView
            android:id="@+id/no21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/drag2"
            android:layout_alignTop="@+id/drag2"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/no22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/no21"
            android:layout_alignTop="@+id/drag2"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/no23"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/no22"
            android:layout_alignTop="@+id/drag2"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/drag3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dragcat"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"/>
        <TextView
            android:id="@+id/no31"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/drag2"
            android:layout_alignTop="@+id/drag3"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/no32"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/no31"
            android:layout_alignTop="@+id/drag3"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/no33"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textColor="@color/register_login"
            android:textSize="80dp"
            android:layout_toEndOf="@+id/no32"
            android:layout_alignTop="@+id/drag3"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>

    </RelativeLayout>
</RelativeLayout>
