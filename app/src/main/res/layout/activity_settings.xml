<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mainmenu"
    android:background="#0e7547"
    android:layout_weight="5">
    <TextView
        android:id="@+id/weclome_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="Ρυθμίσεις"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_manu_background"
        android:orientation="vertical"
        android:layout_below="@+id/weclome_text">
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/register_login"
            android:text="Αποσύνδεση"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/line1"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/logout"/>
        <TextView
            android:id="@+id/change_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/register_login"
            android:text="Αλλαγή στοιχείων"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/line"/>
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/change_details"/>
        <TextView
            android:id="@+id/change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/register_login"
            android:text="Αλλαγή κωδικού"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/line2"/>
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/change_pass"/>
        <TextView
            android:id="@+id/showscores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/register_login"
            android:text="Προβολή όλων των βαθμολογιών"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/line3"/>
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/showscores"/>
        <TextView
            android:id="@+id/resetscores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/register_login"
            android:text="Διαγραφή όλων των βαθμολογιών"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/line4"/>
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/resetscores"/>
        <TextView
            android:id="@+id/deleteuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/register_login"
            android:text="Διαγραφή λογαριασμού"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/line5"/>
        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/deleteuser"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:text="Η εκφώνηση είναι από την Παναγιώτα Τριανταφυλλοπούλου\n\n
            Οι εικόνες είναι από το Pixabay.com από τους:\n\n
                        Piyapong Saydaung \n
                        Open-Clipart-Vectors \n
                        Clker-Free-Vector-Images \n
                        Pinkii \n
                        Mahua Sarkar \n
                        Ronny Overhate \n
                        Piyapong Saydaung \n
                        mohamed Hassan \n
                        dragonboy7557 \n
                        Raphaël Jeanneret "/>
    </RelativeLayout>
</RelativeLayout>
