<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/unselected_tile_with_borders">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/old_man"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/image1"
                    android:layout_alignParentEnd="true">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/click1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Είναι παππούς"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/click2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Είναι παιδί"
                    android:textAlignment="center"
                    android:layout_alignStart="@+id/click1"
                    android:layout_marginLeft="5dp"
                    android:layout_alignEnd="@+id/click1"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/click1"
                    android:padding="10dp" />

                    <ImageView
                        android:id="@+id/play_click1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click1"
                        android:layout_alignBottom="@id/click1"
                        android:paddingHorizontal="10dp"/>
                    <ImageView
                        android:id="@+id/play_click2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click2"
                        android:layout_alignBottom="@id/click2"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/unselected_tile_with_borders">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/mother_with_children"
                    android:layout_margin="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/image2"
                android:layout_alignParentEnd="true">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/click3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Είναι μόνη της"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentStart="true"
                        android:padding="12dp"
                        android:layout_marginVertical="10dp"/>
                    <TextView
                        android:id="@+id/click4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Είναι με τα παιδιά της"
                        android:textAlignment="center"
                        android:layout_alignStart="@+id/click3"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/click3"
                        android:padding="10dp"
                        android:layout_alignEnd="@+id/click3"/>
                    <ImageView
                        android:id="@+id/play_click3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click3"
                        android:layout_alignBottom="@id/click3"
                        android:paddingHorizontal="10dp"/>
                    <ImageView
                        android:id="@+id/play_click4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click4"
                        android:layout_alignBottom="@id/click4"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/down"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/up"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/unselected_tile_with_borders">
                <ImageButton
                    android:id="@+id/image3"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/woman_in_dress"
                    android:layout_marginVertical="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/image3"
                android:layout_alignParentEnd="true">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/click5"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="Φοράει παντελόνι"
                        android:textAlignment="center"
                        android:layout_marginVertical="5dp"
                        android:layout_alignParentStart="true"
                        android:paddingVertical="8dp"/>
                    <TextView
                        android:id="@+id/click6"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Φοράει φόρεμα"
                        android:textAlignment="center"
                        android:layout_alignStart="@+id/click5"
                        android:layout_alignEnd="@+id/click5"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/click5"
                        android:paddingVertical="7dp"
                        android:layout_marginVertical="10dp" />
                    <ImageView
                        android:id="@+id/play_click5"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click5"
                        android:layout_alignBottom="@id/click5"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"/>
                    <ImageView
                        android:id="@+id/play_click6"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click6"
                        android:layout_alignBottom="@id/click6"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"/>
                </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/unselected_tile_with_borders">
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/businessman"
                    android:layout_margin="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/image4"
                android:layout_alignParentEnd="true">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/click7"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:text="Δουλεύει"
                        android:textAlignment="center"
                        android:layout_alignParentStart="true"
                        android:paddingVertical="10dp"
                        android:layout_marginVertical="5dp"/>
                    <TextView
                        android:id="@+id/click8"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:text="Ξεκουράζεται"
                        android:textAlignment="center"
                        android:layout_alignStart="@+id/click7"
                        android:layout_alignEnd="@+id/click7"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/click7"
                        android:paddingVertical="9dp"
                        android:layout_marginVertical="10dp" />
                    <ImageView
                        android:id="@+id/play_click7"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_toEndOf="@id/click7"
                        android:layout_alignBottom="@id/click7"
                        android:paddingHorizontal="10dp"/>
                    <ImageView
                        android:id="@+id/play_click8"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/play_button"
                        android:layout_alignStart="@+id/play_click7"
                        android:layout_toEndOf="@id/click8"
                        android:layout_alignBottom="@id/click8"
                        android:paddingHorizontal="10dp" />
                </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
