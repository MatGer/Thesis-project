<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <TextView
            android:id="@+id/loginheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Το προφίλ σας"
            android:textColor="@color/register_login"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/register_login"
            android:layout_above="@+id/showemail"
            android:layout_alignStart="@+id/showemail"/>
        <EditText
            android:id="@+id/showemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="E-mail"
            android:textAllCaps="false"
            android:textColor="@color/register_login"
            android:textColorHighlight="@color/register_login"
            android:textColorHint="@color/register_login"
            android:textColorLink="@color/register_login"
            android:layout_below="@id/loginheader"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/register_login"
            android:layout_above="@+id/showusername"
            android:layout_alignStart="@+id/showusername"/>
        <EditText
            android:id="@+id/showusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:hint="Username"
            android:textAllCaps="false"
            android:textColor="@color/register_login"
            android:textColorHighlight="@color/register_login"
            android:textColorHint="@color/register_login"
            android:textColorLink="@color/register_login"
            android:layout_below="@id/showemail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/register_login"
            android:layout_above="@+id/showpassword"
            android:layout_alignStart="@+id/showpassword"/>
        <EditText
            android:id="@+id/showpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:hint="Password"
            android:textAllCaps="false"
            android:inputType="textPassword"
            android:textColor="@color/register_login"
            android:textColorHighlight="@color/register_login"
            android:textColorHint="@color/register_login"
            android:textColorLink="@color/register_login"
            android:layout_below="@id/showusername"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/register_login"
            android:layout_above="@+id/showpassword2"
            android:layout_alignStart="@+id/showpassword2"/>
        <EditText
            android:id="@+id/showpassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textAllCaps="false"
            android:textColor="@color/register_login"
            android:textColorHighlight="@color/register_login"
            android:textColorHint="@color/register_login"
            android:textColorLink="@color/register_login"
            android:layout_below="@id/showpassword"/>

        <Button
            android:id="@+id/showupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAllCaps="false"
            android:layout_below="@id/showpassword2"
            android:layout_alignEnd="@+id/create_new_account_text"
            android:textColor="@color/register_login" />
        <Button
            android:id="@+id/showcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_below="@id/showpassword2"
            android:textColor="@color/register_login"
            android:layout_alignStart="@+id/create_new_account_text" />
        <TextView
            android:id="@+id/forget_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ξέχασα τον κωδικό μου"
            android:textColor="@color/register_login"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/showupdate"
            android:clickable="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/create_new_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Δημιουργία νέου λογαριασμού"
            android:textColor="@color/register_login"
            android:layout_below="@id/forget_password_button"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <ProgressBar
            android:id="@+id/progressbar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.ProgressBar.Large"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/create_new_account_text"
            android:layout_marginTop="50dp"
            android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>
