<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/appbar"
        android:id="@+id/toolbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:text=""
            android:textColor="@color/black"
            android:padding="15dp"/>
        <Button
            android:id="@+id/correntbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginStart="70dp"
            android:text=" Σωστό "
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_baseline_done_24"
            android:background="@drawable/correct_button"/>

        <Button
            android:id="@+id/wrongbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:text=" Λάθος "
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_baseline_error_24"
            android:background="@drawable/wrong_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextquestionbutton"
            android:text=" Επόμενη ερώτηση "
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:layout_marginBottom="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/ic_baseline_navigate_next_24"
            android:background="@drawable/next_question_button"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>