<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mainmenu"
    android:background="#0e7547"
    android:layout_weight="5">
    <TextView
        android:id="@+id/weclome_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="Βαθμολογίες"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"/>
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_manu_background"
        android:orientation="vertical"
        android:layout_below="@+id/weclome_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Πάτησε σε μία δραστηριότητα για να μεταβείς σε αυτή."
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:paddingHorizontal="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            android:layout_height="match_parent"
            android:layout_width="fill_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <TextView
                        android:id="@+id/ac8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/register_login"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
