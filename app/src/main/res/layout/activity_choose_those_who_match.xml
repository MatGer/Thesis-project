<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/unselected_tile_with_borders">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/reindeer"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/image1"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/click1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Είναι τάρανδος"
                            android:textAlignment="center"
                            android:padding="6dp"
                            android:layout_alignStart="@+id/click2"
                            android:layout_alignEnd="@+id/click2"/>
                        <TextView
                            android:id="@+id/click2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="   Είναι άνοιξη   "
                            android:textAlignment="center"
                            android:layout_below="@+id/click1"
                            android:padding="6dp"/>
                        <TextView
                            android:id="@+id/click3"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Κάνει κρύο"
                            android:textAlignment="center"
                            android:layout_below="@+id/click2"
                            android:padding="6dp"
                            android:layout_alignStart="@+id/click2"
                            android:layout_alignEnd="@+id/click2"/>
                        <TextView
                            android:id="@+id/click4"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Έχει χιόνι"
                            android:textAlignment="center"
                            android:layout_below="@+id/click3"
                            android:padding="6dp"
                            android:layout_alignStart="@+id/click2"
                            android:layout_alignEnd="@+id/click2"/>
                        <ImageView
                            android:id="@+id/play_click1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click1"/>
                        <ImageView
                            android:id="@+id/play_click2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click2"
                            android:layout_below="@+id/play_click1"/>
                        <ImageView
                            android:id="@+id/play_click3"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click3"
                            android:layout_below="@id/play_click2"/>
                        <ImageView
                            android:id="@+id/play_click4"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click4"
                            android:layout_below="@id/play_click3"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/down"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/up"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/unselected_tile_with_borders">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/reading"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/image2"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/click5"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Παίζει μουσική"
                            android:textAlignment="center"
                            android:padding="6dp" />
                        <TextView
                            android:id="@+id/click6"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Είναι όρθια"
                            android:textAlignment="center"
                            android:layout_below="@+id/click5"
                            android:padding="6dp"
                            android:layout_alignStart="@+id/click5"
                            android:layout_alignEnd="@+id/click5"/>
                        <TextView
                            android:id="@+id/click7"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Έχει ήλιο"
                            android:textAlignment="center"
                            android:layout_below="@+id/click6"
                            android:padding="6dp"
                            android:layout_alignStart="@+id/click5"
                            android:layout_alignEnd="@+id/click5"/>
                        <TextView
                            android:id="@+id/click8"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Είναι χειμώνας"
                            android:textAlignment="center"
                            android:layout_below="@+id/click7"
                            android:padding="6dp"
                            android:layout_alignStart="@+id/click5"
                            android:layout_alignEnd="@+id/click5"/>
                        <ImageView
                            android:id="@+id/play_click5"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click5"/>
                        <ImageView
                            android:id="@+id/play_click6"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click6"
                            android:layout_below="@+id/play_click5"/>
                        <ImageView
                            android:id="@+id/play_click7"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click7"
                            android:layout_below="@id/play_click6"/>
                        <ImageView
                            android:id="@+id/play_click8"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@drawable/play_button"
                            android:padding="6dp"
                            android:layout_toEndOf="@+id/click8"
                            android:layout_below="@id/play_click7"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
