<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:orientation="vertical"
    tools:context=".Mainmenu"
    android:background="#0e7547"
    android:layout_weight="5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/weclome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Λεξιλόγιο"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="15dp"
        android:background="@drawable/main_manu_background">
        <androidx.cardview.widget.CardView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:elevation="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <!--add textview for title-->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/leksilogio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Παρακολουθώ περιγραφές"
                        android:textColor="@color/white"
                        android:background="@drawable/start_menu_button"
                        android:padding="15dp"
                        android:layout_margin="15dp"
                        android:textAllCaps="false"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:elevation="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/odhgies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Οδηγίες"
                        android:textColor="@color/white"
                        android:background="@drawable/start_menu_button"
                        android:padding="15dp"
                        android:layout_margin="15dp"
                        android:textAllCaps="false"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</LinearLayout>
    <!--app:cardCornerRadius="45dp"-->