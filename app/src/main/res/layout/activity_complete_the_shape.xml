<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
           <ImageView
               android:id="@+id/first_complete"
               android:layout_width="40dp"
               android:layout_height="80dp"
               android:src="@drawable/star_left"/>
            <ImageView
                android:id="@+id/second_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/first_complete"/>
            <ImageView
                android:id="@+id/third_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:src="@drawable/square_left"
                android:layout_toEndOf="@+id/second_complete"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/fourth_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/third_complete"/>
            <ImageView
                android:id="@+id/fifth_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:src="@drawable/triangle_left"
                android:layout_toEndOf="@+id/fourth_complete"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/sixth_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/fifth_complete"/>
            <ImageView
                android:id="@+id/drag1_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:src="@drawable/circle_right"
                android:layout_toEndOf="@+id/sixth_complete"
                android:layout_marginLeft="60dp"/>

            <ImageView
                android:id="@+id/drag2_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:src="@drawable/rombos_right"
                android:layout_toEndOf="@+id/drag1_complete"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:id="@+id/drag3_complete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:src="@drawable/triangle_right"
                android:layout_toEndOf="@+id/drag2_complete"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:id="@+id/first_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/circle_left"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/second_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/first_complete2"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/third_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/rombos_left"
                android:layout_toEndOf="@+id/second_complete2"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/fourth_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/third_complete2"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/fifth_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/heart_left"
                android:layout_toEndOf="@+id/fourth_complete2"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/sixth_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/fifth_complete2"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/drag1_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/square_right"
                android:layout_toEndOf="@+id/sixth_complete2"
                android:layout_marginLeft="60dp"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/drag2_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/heart_right"
                android:layout_toEndOf="@+id/drag1_complete2"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/first_complete"/>
            <ImageView
                android:id="@+id/drag3_complete2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/star_right"
                android:layout_toEndOf="@+id/drag2_complete"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/first_complete"/>

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:id="@+id/complete_check"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="here"/>
    </RelativeLayout>
</RelativeLayout>
