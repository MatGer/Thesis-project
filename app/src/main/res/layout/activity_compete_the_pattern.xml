<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/row1_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/circle"/>
                <ImageView
                    android:id="@+id/row1_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/heart"
                    android:layout_toEndOf="@id/row1_1"/>
                <ImageView
                    android:id="@+id/row1_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/circle"
                    android:layout_toEndOf="@id/row1_2"/>
                <ImageView
                    android:id="@+id/row1_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/heart"
                    android:layout_toEndOf="@id/row1_3"/>
                <ImageView
                    android:id="@+id/row1_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/circle"
                    android:layout_toEndOf="@id/row1_4"/>
                <ImageView
                    android:id="@+id/row1_6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/heart"
                    android:layout_toEndOf="@id/row1_5"/>
                <ImageView
                    android:id="@+id/fill1_7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/background"
                    android:layout_toEndOf="@id/row1_6"/>
                <ImageView
                    android:id="@+id/fill1_8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/background"
                    android:layout_toEndOf="@id/fill1_7"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/row1">
                <ImageView
                    android:id="@+id/row2_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/square"/>
                <ImageView
                    android:id="@+id/row2_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/triangle"
                    android:layout_toEndOf="@id/row2_1"/>
                <ImageView
                    android:id="@+id/row2_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/square"
                    android:layout_toEndOf="@id/row2_2"/>
                <ImageView
                    android:id="@+id/row2_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/triangle"
                    android:layout_toEndOf="@id/row2_3"/>
                <ImageView
                    android:id="@+id/row2_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/square"
                    android:layout_toEndOf="@id/row2_4"/>
                <ImageView
                    android:id="@+id/row2_6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/triangle"
                    android:layout_toEndOf="@id/row2_5"/>
                <ImageView
                    android:id="@+id/fill2_7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/background"
                    android:layout_toEndOf="@id/row2_6"/>
                <ImageView
                    android:id="@+id/fill2_8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/background"
                    android:layout_toEndOf="@id/fill2_7"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/row2">
                <ImageView
                    android:id="@+id/row3_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/rombos"/>
                <ImageView
                    android:id="@+id/row3_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@id/row3_1"/>
                <ImageView
                    android:id="@+id/row3_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/rombos"
                    android:layout_toEndOf="@id/row3_2"/>
                <ImageView
                    android:id="@+id/row3_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@id/row3_3"/>
                <ImageView
                    android:id="@+id/row3_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/rombos"
                    android:layout_toEndOf="@id/row3_4"/>
                <ImageView
                    android:id="@+id/row3_6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@id/row3_5"/>
                <ImageView
                    android:id="@+id/fill3_7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/background"
                    android:layout_toEndOf="@id/row3_6"/>
                <ImageView
                    android:id="@+id/fill3_8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/background"
                    android:layout_toEndOf="@id/fill3_7"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/row3">
                <ImageView
                    android:id="@+id/row4_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/triangle"/>
                <ImageView
                    android:id="@+id/row4_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/circle"
                    android:layout_toEndOf="@id/row4_1"/>
                <ImageView
                    android:id="@+id/row4_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@id/row4_2"/>
                <ImageView
                    android:id="@+id/row4_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/square"
                    android:layout_toEndOf="@id/row4_3"/>
                <ImageView
                    android:id="@+id/row4_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/heart"
                    android:layout_toEndOf="@id/row4_4"/>
                <ImageView
                    android:id="@+id/row4_6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/rombos"
                    android:layout_toEndOf="@id/row4_5"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:id="@+id/complete_check"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="here"/>
    </RelativeLayout>
</RelativeLayout>
