<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correct_wrong"
    android:id="@+id/mainlayout"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/appbar"
            android:id="@+id/toolbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/pencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pencil_1"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/balls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tennis_balls_2"
                android:layout_toEndOf="@id/pencil"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/eggs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/easter_eggs_3"
                android:layout_toEndOf="@+id/balls"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/number1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/balls"
                android:layout_toEndOf="@+id/number3"
                android:layout_marginHorizontal="50sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/number2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:layout_alignTop="@id/number1"
                android:layout_toEndOf="@id/number1"
                android:layout_marginHorizontal="50sp"/>
            <TextView
                android:id="@+id/number3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:textSize="40dp"
                android:background="@color/teal_200"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_alignTop="@id/number1"
                android:layout_marginHorizontal="50sp"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:id="@+id/numbers_check"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="here"/>
    </RelativeLayout>
</RelativeLayout>
